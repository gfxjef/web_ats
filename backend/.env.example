# EJEMPLO DE CONFIGURACIÓN - COPIAR A .env Y ACTUALIZAR VALORES

# Base de Datos MySQL
DB_HOST=your-mysql-host.com
DB_USER=your_mysql_user
DB_PASSWORD=your_secure_password_here
DB_NAME=your_database_name
DB_PORT=3306

# Seguridad - IMPORTANTE: Cambiar en producción
SECRET_KEY=generate-a-secure-key-with-openssl-rand-hex-32
FLASK_ENV=production
FLASK_DEBUG=False

# CORS - Dominios permitidos (separados por comas)
CORS_ORIGINS=https://your-frontend-domain.vercel.app,https://your-custom-domain.com

# Redis (opcional)
REDIS_HOST=your-redis-host.com
REDIS_PORT=6379
REDIS_DB=0

# SSL Base de Datos (recomendado para producción)
DB_SSL=True
DB_SSL_CA=/path/to/ca-cert.pem

# Configuración de Workers (Render)
WEB_CONCURRENCY=4

# Puerto (manejado automáticamente por Render)
# PORT=5001