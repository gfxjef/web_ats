# CONFIGURACIÓN DE PRODUCCIÓN PARA RENDER

# Base de Datos MySQL - REQUERIDO
DB_HOST=tu-mysql-host-produccion.com
DB_USER=ats_prod_user
DB_PASSWORD=genera-password-seguro-aqui
DB_NAME=ats_production
DB_PORT=3306

# Seguridad - CRÍTICO
SECRET_KEY=genera-con-openssl-rand-hex-32
FLASK_ENV=production
FLASK_DEBUG=False

# CORS - Dominios permitidos
CORS_ORIGINS=https://web-ats.vercel.app,https://www.atusaludlicoreria.com

# Redis (opcional pero recomendado)
REDIS_HOST=tu-redis-host.com
REDIS_PORT=6379
REDIS_DB=0

# SSL Base de Datos (recomendado)
DB_SSL=True
DB_SSL_CA=/path/to/ca-cert.pem

# Workers (Render auto-configura)
# PORT es asignado automáticamente por Render
WEB_CONCURRENCY=4